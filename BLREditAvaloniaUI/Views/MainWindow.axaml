<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BLREdit.ViewModels"
        xmlns:temp="using:BLREdit.DataTemplates.BLR"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1040"
        x:Class="BLREdit.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/BLREdit Logo (DraagonLizzard).ico"
        Title="{Binding WindowTitle}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid>
    <Button Command="{Binding ButtonCommand}">RNG Window Title</Button>
    <ItemsControl Items="{Binding Clients}">
      <ItemsControl.ItemTemplate>
        <temp:BLRDataTemplate/>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>

</Window>
