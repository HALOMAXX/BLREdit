                                                <Border Grid.Column="5">
                                                    <TextBlock Text="{Binding Source={x:Static ui:UILanguageWrapper.LblLauConnectToServer }}"/>
                                                </Border>
                                                <Border Grid.Column="6">
                                                    <TextBlock Text="{Binding Source={x:Static ui:UILanguageWrapper.LblLauIsServerDefault }}"/>
                                                </Border>
                                            </Grid>
                                            <ItemsPresenter Grid.Row="1"></ItemsPresenter>
                                        </Grid>
                                    </ControlTemplate>
                                </ListView.Template>
                            </ListView>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Client List">
                        <Grid Name="ClientGrid">
                            <Button Content="{Binding Source={x:Static ui:UILanguageWrapper.BtnLauAddClient }}" Margin="240,0,0,0" Width="240" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Click="OpenNewGameClient_Click"/>
                            <ListView Name="GameClientList" Margin="0,0,0,40">
                                <Button/>
                                <Button/>
                                <Button/>
                                <Button/>
                                <Button/>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid HorizontalAlignment="Left" VerticalAlignment="Top" Columns="2"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="game:BLRClient">
                                        <Grid>
                                            <Border BorderThickness="1,1,1,1">
