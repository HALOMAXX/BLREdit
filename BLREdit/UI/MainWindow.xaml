                            </Grid>
                        </Border>

                        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,341,0,0">
                            <Grid Width="Auto">
                                <Label Content="{Binding Source={x:Static ui:UILanguageWrapper.LblAdvSecondary }}" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Top" Style="{StaticResource DescriptorLabel}" Margin="0,-5,0,0"/>
                                <UniformGrid Columns="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,26,0,0">
                                    <Label Content="{Binding Source={x:Static ui:UILanguageWrapper.LblAdvFragmentsPerShell }}" HorizontalAlignment="Right" Style="{StaticResource DescriptorLabel}"/>
