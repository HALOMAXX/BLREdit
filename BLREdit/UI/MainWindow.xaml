                                                    <TextBlock Text="{Binding Source={x:Static ui:UILanguageWrapper.LblLauServerAddress }}"/>
                                                </Border>
                                                <Border Grid.Column="2">
                                                    <TextBlock Text="{Binding Source={x:Static ui:UILanguageWrapper.LblLauServerPort }}"/>
