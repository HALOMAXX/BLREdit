            <TabItem Header="Launcher">
                <TabControl BorderThickness="0,1,0,0">
                    <TabItem Header="Server List">
                        <Grid Name="ServerGrid">
                            <Button Content="{Binding Source={x:Static ui:UILanguageWrapper.BtnLauAddServer }}" Width="240" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Margin="-240,0,0,0" Click="AddNewServer_Click"/>
                            <Button Content="{Binding Source={x:Static ui:UILanguageWrapper.BtnLauRefreshPing }}" Width="240" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Margin="240,0,0,0" Click="PingServers_Click"/>
                            <ListView Name="ServerListView" Margin="0,0,0,40" SelectionMode="Single">
                                <Button/>
                                <!--This is for Desing Purposes-->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid>
                                                        <ContentPresenter   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="game:BLRServer">
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="262" />
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="80" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="5,0" />
                                                    <Setter Property="Foreground" Value="White" />
                                                </Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="BorderBrush" Value="LightGray" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Style>
                                            </Grid.Resources>
                                            <Border Grid.Column="0" >
                                                <Button Content="{Binding Source={x:Static ui:UILanguageWrapper.LblLauRemove }}" Click="RemoveServer_Click"/>
                                            </Border>
                                            <Border Grid.Column="1" >
                                                <TextBox Text="{Binding Path=ServerAddress}" HorizontalAlignment="Stretch"/>
                                            </Border>
                                            <Border Grid.Column="2" >
                                                <TextBox Text="{Binding Path=Port}" PreviewTextInput="PortValidation" HorizontalAlignment="Stretch"/>
                                            </Border>
                                            <Border Grid.Column="3" >
