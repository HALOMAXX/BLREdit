        <Grid Margin="374,22,0,0" Name="LauncherMenu" d:DataContext="{d:DesignInstance Type=ui:MainWindow}">
            <Button Name="ServerListButton" Content="{Binding Path=Lang.BtnLauServerList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" Tag="{Binding ElementName=ServerGrid}" Click="LauncherMenuButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Height="24"/>
            <Button Name="GameClientButton" Content="{Binding Path=Lang.BtnLauClientList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" Tag="{Binding ElementName=ClientGrid}" Click="LauncherMenuButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Height="24" Margin="126,0,0,0"/>
            <Grid Name="ClientGrid" Visibility="Collapsed" Margin="0,24,0,0">
                <Button Content="{Binding Path=Lang.BtnLauAddClient, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" Margin="240,0,0,0" Width="240" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Click="OpenNewGameClient_Click"/>
                <ListView Name="GameClientList" x:FieldModifier="public" Margin="0,0,0,40">
                    <!--This is for Desing Purposes-->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid>
                                            <ContentPresenter   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate DataType="game:GameClient">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="262" />
                                    <ColumnDefinition Width="262" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="120" />
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Margin" Value="5,0" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Setter Property="BorderBrush" Value="LightGray" />
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Grid.Resources>
                                <Border Grid.Column="0" >
                                    <Button Content="{Binding Path=Lang.LblLauRemove, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" Click="RemoveGameClient_Click"/>
                                </Border>
                                <Border Grid.Column="1" >
                                    <TextBox Text="{Binding Path=OriginalPath}" IsReadOnly="True" HorizontalAlignment="Stretch"/>
                                </Border>
                                <Border Grid.Column="2" >
                                    <TextBox Text="{Binding Path=PatchedPath}" IsReadOnly="True" HorizontalAlignment="Stretch"/>
                                </Border>
                                <Border Grid.Column="3" >
                                    <Button Content="{Binding Path=IsPatched}" IsEnabled="{Binding Path=IsNotPatched}" IsHitTestVisible="False"/>
                                </Border>
                                <Border Grid.Column="4" >
                                    <Button Content="{Binding Path=Lang.LblLauClientConnectToDefaultServer, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" IsEnabled="{Binding Path=IsPatched}" Command="{Binding Path=LaunchClientCommand}"/>
                                </Border>
                                <Border Grid.Column="5" >
                                    <Button Content="{Binding Path=Lang.LblLauIsClientDefault, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" IsEnabled="{Binding Path=IsNotCurrentClient}" Click="ChangeCurrentGameClient_Click"/>
                                </Border>
