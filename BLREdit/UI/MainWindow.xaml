    <Window.Background>
        <ImageBrush ImageSource="Resources/Default_2016.png" />
    </Window.Background>
    <Grid AllowDrop="True">
        <ComboBox Name="ProfileComboBox" DisplayMemberPath="Name" SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="ProfileComboBox_SelectionChanged"/>
