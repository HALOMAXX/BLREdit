                            <Label Content="{Binding Path=Lang.LblAdvRange, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" HorizontalAlignment="Right" Style="{StaticResource DescriptorLabel}"/>
                            <Label Content="{Binding Path=Primary.RangePercentageDisplay}" Style="{StaticResource DisplayLabel}" HorizontalAlignment="Left" Name="PrimaryModRangeLabel"/>

                            <Label Content="{Binding Path=Lang.LblAdvReload, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" HorizontalAlignment="Right" Style="{StaticResource DescriptorLabel}"/>
                            <Label Content="{Binding Path=Primary.ReloadPercentageDisplay}" Style="{StaticResource DisplayLabel}" HorizontalAlignment="Left" Name="PrimaryModReloadLabel"/>

                            <Label Content="{Binding Path=Lang.LblAdvRecoil, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:MainWindow}}" HorizontalAlignment="Right" Style="{StaticResource DescriptorLabel}"/>
