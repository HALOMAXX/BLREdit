<Window x:Class="BLREdit.UI.Windows.HelixTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLREdit.UI.Windows"
        xmlns:view="clr-namespace:BLREdit.UI.Views"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        mc:Ignorable="d"
        Title="HelixTestWindow" Height="450" Width="800">
    <Window.DataContext>
        <view:HelixTestViewModel></view:HelixTestViewModel>
    </Window.DataContext>
    <Grid>
        <hx:Viewport3DX EffectsManager="{Binding EffectsManager}" Camera="{Binding Camera}">
            <hx:DirectionalLight3D Direction="-1, -1, -1" Color="White"/>
            <hx:MeshGeometryModel3D Geometry="{Binding CubeMesh}" Material="{Binding Red}"/>
        </hx:Viewport3DX>
    </Grid>
</Window>
