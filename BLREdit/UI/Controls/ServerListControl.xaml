<UserControl x:Class="BLREdit.UI.Controls.ServerListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:BLREdit.Properties"
             xmlns:local="clr-namespace:BLREdit.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
            <!--Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MainWindow}}, Path=DataContext.ItemListSortingDirectionString}"-->
            <Button Name="ServerSortDirection" Content="{Binding Path=ServerListSortingDirectionString}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"  Click="ServerSortDirection_Click"/>
            <ComboBox Name="ServerSortCombobox" ItemsSource="{Binding Path=SortTypes}" SelectedIndex="{Binding Path=ServerSortIndex, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" SelectionChanged="ServerSortCombobox_SelectionChanged"/>
            <TextBox Name="ServerSearchBox" Text="" HorizontalAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Width="240" TextChanged="ServerSearchBox_TextChanged" PreviewKeyDown="ServerSearchBox_PreviewKeyDown"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Grid.Row="1">
            <Button Content="{Binding Source={x:Static p:Resources.btn_AddServer}}" Width="240" Click="AddNewServer_Click"/>
            <Button Content="{Binding Source={x:Static p:Resources.btn_QuickMatch}}" Width="240" Click="QuickMatch_Click"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="ServerListView" ItemsSource="{Binding Path=ServerList}" DataContextChanged="ServerListView_DataContextChanged" Margin="0,0,0,40" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:ServerControl/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
