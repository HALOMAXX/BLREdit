<UserControl x:Class="BLREdit.UI.Controls.PlaylistPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BLREdit.UI.Controls"
             xmlns:game="clr-namespace:BLREdit.API.Export"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=game:BLRPlaylist}"
             d:DesignHeight="512" d:DesignWidth="512">
    <Grid Width="512" Height="512">
        <Canvas ClipToBounds="True">
            <Image Name="MapImage" Source="{Binding Path=MapImage}" Stretch="UniformToFill" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,0"/>
        </Canvas>

        <Border Width="Auto" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="1" BorderBrush="#FF78AEBC" Background="#ef000000">
            <Label Margin="2" Content="{Binding Path=Name}" Foreground="#FF78AEBC" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Border>

        <!--<Label Content="{Binding Path=Name}" Height="40" Width="84" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>-->
        <Button Content="Play" Click="Play_Playlist" Height="40" Width="84" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>
        <Button Content="Edit" Click="Edit_Playlist" Height="40" Width="84" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10"/>
        <Button Content="  Remove" Width="84" Height="40" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" ToolTip="Open Settings" Click="Remove_Playlist_Click"/>
    </Grid>
</UserControl>
