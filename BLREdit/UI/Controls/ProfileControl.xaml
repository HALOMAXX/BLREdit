<UserControl x:Class="BLREdit.UI.Controls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BLREdit.UI.Controls"
             xmlns:views="clr-namespace:BLREdit.UI.Views"
             xmlns:export="clr-namespace:BLREdit.API.Export"
             mc:Ignorable="d"
             
             d:DesignHeight="450" d:DesignWidth="800"
             DataContextChanged="UserControl_DataContextChanged">
    <Grid x:Name="ShareableProfileGrid" d:DataContext="{d:DesignInstance Type=export:ShareableProfile}">
        <Label Content="{Binding Path=Name}"/>
        <Grid x:Name="BLRProfileGrid" d:DataContext="{d:DesignInstance Type=views:BLRProfile}">
            <Image Source="{Binding Path=Loadout1.Primary.Reciever.Image.IconFileInfo.FullName}"/>
        </Grid>
    </Grid>
</UserControl>
